        import java.util.*;
public class Main
{
  String name;
  String USN;
  static int credits[],marks[];
  static double sgpa;

    Main (String s, String id)
  {
    name = s;
    USN = id;
  }
  static void accept (Main s, int num)
  {
    Scanner in = new Scanner (System.in);
    System.out.println ("Enter credit and mark obtained ");
    for (int i = 0; i < num; i++)
      {
	System.out.println ("subject " + (i + 1));
	System.out.print ("credit : ");
	s.credits[i] = in.nextInt ();
	System.out.print ("marks : ");
	s.marks[i] = in.nextInt ();
	System.out.println ();
      }
  }
  static void display (Main s, int num)
  {

    System.out.println ("Name:" + s.name);
    System.out.println ("USN:" + s.USN);
    for (int j = 0; j < num; j++)
      {
	int a = j + 1;
	System.out.println ("subject " + a + ":  credit:" + s.credits[j] +
			    " mark:" + s.marks[j]);
      }
  }
  static void calsgpa (Main s, int num)
  {
    double sum = 0, tot = 0, totcredits = 0;
    for (int j = 0; j < num; j++)
      {
	tot = s.credits[j] * s.marks[j];
	sum = sum + tot;
	totcredits = totcredits + s.credits[j];
	tot = 0;
      }
    sgpa = sum / (totcredits);
    System.out.println ("sgpa of a student is " + sgpa);
  }

  public static void main (String[]args)
  {

    Scanner scan = new Scanner (System.in);
    System.out.println ("Enter name and USN of student :");
    String stud_name = scan.nextLine ();
    String stud_USN = scan.nextLine ();
    Main s1 = new Main (stud_name, stud_USN);
    System.out.println ("Enter no of subjects");
    int n = scan.nextInt ();
    credits= new int[n];
    marks= new int[n];
    accept (s1, n);
    display (s1, n);
    calsgpa (s1, n);
  }
}
